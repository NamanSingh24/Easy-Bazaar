<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Manage Products</title>
<style>
  /* Importing font */
  @import url(https://fonts.googleapis.com/css?family=Electrolize);

  /* Setting background color */
  body {
    background-color: #111;
    font-family: 'Electrolize', sans-serif; /* Applying font to the entire body */
    color: #FFB902; /* Setting text color */
    margin: 0;
    padding: 0;
  }



  /* Style for hiding forms */
  .hidden {
    display: none;
  }

  /* Apply font and color to h1 */
  h1 {
    text-align: center;
    margin-top: 50px; /* Adjust margin */
  }

  /* Button styles */
  .space-btn {
    position: relative;
    font-size: 1em;
    text-transform: uppercase;
    letter-spacing: 0.125em;
    line-height: 1;
    color: #FFB902; /* Changed color to match button */
    margin: 10px; /* Adjust spacing between buttons */
    padding: 1em 2em; /* Adjust button padding */
    background: none;
    border: none;
    cursor: pointer;
    transition: color 0.3s ease-in-out;
  }

  .space-btn:hover {
    color: lighten(#FFB902, 20%);
  }

  .space-btn:focus {
    color: lighten(#FFB902, 10%);
    outline: none;
  }

  .space-btn:active {
    color: #FFB902;
  }

  .space-btn:before,
  .space-btn:after {
    content: "";
    display: block;
    position: absolute;
    width: 100%;
    height: 1px;
  }

  .space-btn:before {
    top: 0;
    left: 0;
    box-shadow: inset 1px 1px 0 0 #FFB902;
  }

  .space-btn:after {
    right: 0;
    bottom: 0;
    box-shadow: inset -1px -1px 0 0 #FFB902;
  }

  .space-btn:hover:before {
    animation: hoverShadowBefore 1s forwards;
  }

  .space-btn:hover:after {
    animation: hoverShadowAfter 1s forwards;
  }

  @keyframes hoverShadowBefore {
    0% {
      width: 100%;
      height: 1px;
      top: 0;
      left: 0;
    }
    33% {
      width: 1px;
      height: 100%;
      top: 0;
      left: 0;
    }
    66% {
      width: 1px;
      height: 1px;
      top: calc(100% - 1px);
      left: 0;
    }
    100% {
      width: 100%;
      height: 1px;
      top: calc(100% - 1px);
      left: 0;
    }
  }

  @keyframes hoverShadowAfter {
    0% {
      width: 100%;
      height: 1px;
    }
    33% {
      width: 1px;
      height: 100%;
      bottom: 0;
      right: 0;
    }
    66% {
      width: 1px;
      height: 1px;
      bottom: calc(100% - 1px);
      right: 0;
    }
    100% {
      width: 100%;
      height: 1px;
      bottom: calc(100% - 1px);
      right: 0;
    }
  }

  /* Form styles */
  form {
    text-align: center;
    margin-top: 20px; /* Adjust margin */
  }

  form label {
    display: block;
    margin-bottom: 5px; /* Adjust margin */
  }

  form input[type="text"],
  form input[type="submit"] {
    padding: 10px; /* Adjust padding */
    margin-bottom: 10px; /* Adjust margin */
    width: 100%; /* Make inputs full width */
    box-sizing: border-box; /* Include padding and border in the width */
    border: 1px solid #ffffff; /* Add border */
    background-color: transparent; /* Make background transparent */
    color: #ffffff; /* Text color */
    font-family: 'Electrolize', sans-serif; /* Apply font */
  }

  form input[type="submit"] {
    background-color: #ffffff; /* Button background color */
    cursor: pointer;
    transition: background-color 0.3s ease-in-out;
  }

  form input[type="submit"]:hover {
    background-color: darken(#000000, 10%); /* Darken button color on hover */
  }

  /* Hide default outline on focus */
  form input[type="text"]:focus,
  form input[type="submit"]:focus {
    outline: none;
  }

  /* Center align buttons */
  .button-container {
    display: flex;
    justify-content: center;
  }
</style>
</head>
<body>

<h1>Manage Products</h1>

<!-- Center-aligned container for buttons -->
<div class="button-container">
  <!-- Buttons to toggle form visibility -->
  <button class="space-btn" onclick="toggleForm('addProductForm')">Add New Product</button>
  <button class="space-btn" onclick="toggleForm('removeProductForm')">Remove Existing Product</button>
  <button class="space-btn" onclick="toggleForm('updateQuantityForm')">Update Product Quantity</button>
</div>

<!-- Form for adding new product -->
<form id="addProductForm" class="hidden" action="/Add_Product" method="post">
  <h2 style="text-transform: uppercase;">Add New Product</h2>
  <label for="name">Product Name:</label><br>
  <input type="text" id="name" name="name" required><br>
  <label for="price">Price:</label><br>
  <input type="text" id="price" name="price" required><br>
  <label for="quantity">Quantity:</label><br>
  <input type="text" id="quantity" name="quantity" required><br><br>

  <label for="supplier_ID">Supplier ID:</label><br>
  <input type="text" id="supplier_id" name="supplier_id" required><br><br>
  <input type="submit" value="Add Product" style="color: #000000;">
</form>

<!-- Form for removing existing product -->
<form id="removeProductForm" class="hidden" action="/Delete_Product" method="post">
  <h2 style="text-transform: uppercase;">Remove Existing Product</h2>
  <label for="product_id">Product ID:</label><br>
  <input type="text" id="product_id" name="product_id" required><br><br>

  <label for="supplier_id">Supplier ID:</label><br>
  <input type="text" id="supplier_id" name="supplier_id" required><br><br>

  <input type="submit" value="Remove Product" style="color: #000000;">
</form>

<!-- Form for updating product quantity -->
<form id="updateQuantityForm" class="hidden" action="/update_product_quantity" method="post">
  <h2 style="text-transform: uppercase;">Update Product Quantity</h2>
  <label for="product_id">Product ID:</label><br>
  <input type="text" id="product_id" name="product_id" required><br>

  <label for="supplier_id">Supplier ID:</label><br>
  <input type="text" id="supplier_id" name="supplier_id" required><br><br>

  <label for="quantity">New Quantity:</label><br>
  <input type="text" id="quantity" name="quantity" required><br><br>
  <input type="submit" value="Update Quantity" style="color: #000000;">
</form>

<script>
  // Function to toggle form visibility
  function toggleForm(formId) {
    var form = document.getElementById(formId);
    form.classList.toggle('hidden');
  }
</script>

</body>
</html>
