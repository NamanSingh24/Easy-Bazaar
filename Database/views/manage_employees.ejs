<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Managing Employees</title>
<style>

  /* Center-align container */
  .container {
    text-align: center;
    margin-top: 50px; /* Adjust margin */
    color: #fff; /* Text color */
  }

  /* Background color */
  body {
    background-color: #111;
  }

  /* Button styles */
  .space-btn {
    position: relative;
    font-size: 1em;
    text-transform: uppercase;
    letter-spacing: 0.125em;
    line-height: 1;
    color: #FFB902; /* Changed color to match button */
    margin: 10px; /* Adjust spacing between buttons */
    padding: 1em 2em; /* Adjust button padding */
    background: none;
    border: none;
    cursor: pointer;
    transition: color 0.3s ease-in-out;
  }

  .space-btn:hover {
    color: lighten(#FFB902, 20%);
  }

  .space-btn:focus {
    color: lighten(#FFB902, 10%);
    outline: none;
  }

  .space-btn:active {
    color: #FFB902;
  }

  .space-btn:before,
  .space-btn:after {
    content: "";
    display: block;
    position: absolute;
    width: 100%;
    height: 1px;
  }

  .space-btn:before {
    top: 0;
    left: 0;
    box-shadow: inset 1px 1px 0 0 #FFB902;
  }

  .space-btn:after {
    right: 0;
    bottom: 0;
    box-shadow: inset -1px -1px 0 0 #FFB902;
  }

  .space-btn:hover:before {
    animation: hoverShadowBefore 1s forwards;
  }

  .space-btn:hover:after {
    animation: hoverShadowAfter 1s forwards;
  }

  @keyframes hoverShadowBefore {
    0% {
      width: 100%;
      height: 1px;
      top: 0;
      left: 0;
    }
    33% {
      width: 1px;
      height: 100%;
      top: 0;
      left: 0;
    }
    66% {
      width: 1px;
      height: 1px;
      top: calc(100% - 1px);
      left: 0;
    }
    100% {
      width: 100%;
      height: 1px;
      top: calc(100% - 1px);
      left: 0;
    }
  }

  @keyframes hoverShadowAfter {
    0% {
      width: 100%;
      height: 1px;
    }
    33% {
      width: 1px;
      height: 100%;
      bottom: 0;
      right: 0;
    }
    66% {
      width: 1px;
      height: 1px;
      bottom: calc(100% - 1px);
      right: 0;
    }
    100% {
      width: 100%;
      height: 1px;
      bottom: calc(100% - 1px);
      right: 0;
    }
  }

 /* Form styles */
 form {
    text-align: center;
    margin-top: 20px; /* Adjust margin */
  }

  form label {
    display: block;
    margin-bottom: 5px; /* Adjust margin */
  }

  form input[type="text"],
  form input[type="password"],
  form input[type="number"] ,
  form input[type="submit"] {
    padding: 10px; /* Adjust padding */
    margin-bottom: 10px; /* Adjust margin */
    width: 100%; /* Make inputs full width */
    box-sizing: border-box; /* Include padding and border in the width */
    border: 1px solid #ffffff; /* Add border */
    background-color: transparent; /* Make background transparent */
    color: #ffffff; /* Text color */
    font-family: 'Electrolize', sans-serif; /* Apply font */
  }

  form input[type="submit"] {
    background-color: #ffffff; /* Button background color */
    cursor: pointer;
    transition: background-color 0.3s ease-in-out;
  }

  form input[type="submit"]:hover {
    background-color: darken(#000000, 10%); /* Darken button color on hover */
  }

  /* Hide default outline on focus */
  form input[type="text"]:focus,
  form input[type="submit"]:focus {
    outline: none;
  }

  /* Center align buttons */
  .button-container {
    display: flex;
    justify-content: center;
  }

  /* Hide form initially */
  .hidden {
    display: none;
  }

</style>
</head>
<body>

<div class="container">
  <h1>Managing Employees</h1>

  <!-- Buttons for managing employees -->
  <div class="button-container">
    <button class="space-btn" onclick="toggleForm('addEmployeeForm')">Add Employee</button>
    <button class="space-btn" onclick="toggleForm('removeEmployeeForm')">Remove Employee</button>
    <button class="space-btn" onclick="toggleForm('updateEmployeeForm')">Update Employee Information</button>
  </div>

  <!-- Form for adding employee -->
  <form id="addEmployeeForm" class="hidden" action="/add_employee" method="post">
    <h2>Add New Employee</h2>
    <label for="first_name">First Name:</label>
    <input type="text" id="first_name" name="first_name" required>

    <label for="middle_name">Middle Name:</label>
    <input type="text" id="middle_name" name="middle_name">

    <label for="last_name">Last_Name:</label>
    <input type="text" id="last_name" name="last_name" required>

    <label for="phone">Phone Number:</label>
    <input type="text" id="phone" name="phone" required>

    <label for="email">Email:</label>
    <input type="text" id="email" name="email" required>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required>

    <label for="post">Post:</label>
    <input type="text" id="post" name="post" required>

    <label for="dept_id">Dept_ID:</label>
    <input type="number" id="dept_id" name="dept_id" required>

    <label for="dob">Date of Birth:</label>
<input type="text" id="dob" name="dob" placeholder="YYYY-MM-DD" required>

<label for="accountNumber">Account Number:</label>
<input type="text" id="accountNumber" name="accountNumber" placeholder="Enter your account number" required>

<label for="doj">Date of Joining:</label>
<input type="text" id="doj" name="doj" placeholder="YYYY-MM-DD" required>

    <label for="salary">Salary:</label>
    <input type="text" id="salary" name="salary" required>


    <input type="submit" value="Add Employee" style="color: #000000;">

  </form>

  <!-- Form for removing employee -->
  <form id="removeEmployeeForm" class="hidden" action="/remove_employee" method="post">
    <h2>Remove Employee</h2>
    <label for="id">Employee ID:</label>
    <input type="text" id="id" name="employee Id To Remove" required>
    <input type="submit" value="Remove Employee" style="color: #000000;">
  </form>

  <!-- Form for updating employee information -->
  <form id="updateEmployeeForm" class="hidden" action="update_employee.php" method="post">
    <h2>Update Employee Information</h2>
    <label for="employeeIdToUpdate">Employee ID:</label>
    <input type="text" id="employeeIdToUpdate" name="employeeIdToUpdate" required>
    <label for="newPhone">New Phone Number:</label>
    <input type="text" id="newPhone" name="newPhone" required>
    <label for="newPost">New Post:</label>
    <input type="text" id="newPost" name="newPost" required>
    <label for="newSalary">New Salary:</label>
    <input type="text" id="newSalary" name="newSalary" required>
    <input type="submit" value="Update Employee Information" style="color: #000000;">
  </form>

  <div>
    <!-- message -->
    <% if (message.length > 0) { %>
    <h2><%= message %></h2>
    <% } %>
</div>



</div>

<script>
  // Function to toggle form visibility
  function toggleForm(formId) {
    var form = document.getElementById(formId);
    form.classList.toggle('hidden');
  }
</script>

</body>
</html>
